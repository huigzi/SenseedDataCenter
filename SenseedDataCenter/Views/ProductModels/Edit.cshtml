@{
    var types = ViewBag.Categories as IEnumerable<SelectListItem>;
}

@model SenseedDataCenter.ViewModel.ProductModel

@{
    ViewData["Title"] = "设备编辑";
}

<h2>设备编辑</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SerialId" class="control-label"></label>
                <input asp-for="SerialId" class="form-control" />
                <span asp-validation-for="SerialId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoftWareRev" class="control-label"></label>
                <input asp-for="SoftWareRev" class="form-control" />
                <span asp-validation-for="SoftWareRev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HardWareRev" class="control-label"></label>
                <input asp-for="HardWareRev" class="form-control" />
                <span asp-validation-for="HardWareRev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Locate" class="control-label"></label>
                <input asp-for="Locate" class="form-control" />
                <span asp-validation-for="Locate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" asp-items="types" class="form-control"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回列表</a>
</div>

